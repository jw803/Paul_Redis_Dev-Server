{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "outDir": "./dist",
        "resolveJsonModule":true,
        "downlevelIteration": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules", 
        "dist", 
        "tsconfig.json"
    ]
}